@page "/parentComponent"
@using HiddenVilla_Server.Pages.LearnBlazor.LearnBlazorComponent

<h3 class="text-danger">Parent Child Component</h3>

<ChildComponent @ref="childComp" OnClickBtnMethod="ShowMessage" Title="This is passed from parent component">
    Render Fragment from Parent
</ChildComponent>

<p><b>@messageText</b></p>

<div class="row">
    <button class="btn btn-secondary" @onclick="()=>childComp.ShowToastrSuccess()">Show Alert</button>
</div>

@code {
    private ChildComponent childComp;
    private string messageText = "";

    private void ShowMessage(MouseEventArgs e)
    {
        messageText = "Text from Parent";
    }
}
